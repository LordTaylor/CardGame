<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/colorPrimary"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="341dp"
            android:layout_height="409dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout"
    android:weightSum="1"
    android:gravity="center">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/magic_card" android:id="@+id/imageView"
                android:layout_weight="0.8"/>
        <Button
                android:text="@string/draw_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_draw"
                android:layout_weight="0.2"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:orientation="horizontal"
            android:layout_width="395dp"
            android:layout_height="298dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.435" android:layout_marginTop="8dp" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

            tools:listitem="@layout/card_item"
            tools:itemCount="5" android:id="@+id/card_container">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>